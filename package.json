{
  "name": "capture-lib",
  "version": "0.3.0",
  "private": true,
  "main": "dist/index.js",
  "jsnext:main": "src/index.js",
  "module": "src/index.js",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "clean": "rimraf dist/ && mkdirp dist/",
    "lint": "standard",
    "build": "babel src --out-dir dist",
    "build:watch": "npm run build -- --watch",
    "docs": "esdoc -c esdoc.json",
    "test": "BABEL_ENV=test ava",
    "test:watch": "npm run test -- --watch",
    "coverage": "nyc npm test"
  },
  "dependencies": {
    "crc": "^3.4.0",
    "object-path": "^0.11.1",
    "pouchdb": "^6.1.2",
    "serialport": "^4.0.1",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-rewire": "^1.0.0-rc-5",
    "babel-plugin-transform-exponentiation-operator": "^6.8.0",
    "babel-plugin-transform-export-extensions": "^6.8.0",
    "babel-plugin-transform-function-bind": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-features": "^2.1.3",
    "babel-register": "^6.11.6",
    "esdoc": "^0.5.2",
    "esdoc-es7-plugin": "0.0.3",
    "esdoc-plugin-enhanced-navigation": "^0.1.1",
    "memdown": "^1.2.0",
    "mkdirp": "^0.5.1",
    "nyc": "^10.2.0",
    "rimraf": "^2.5.4",
    "standard": "^10.0.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": {
      "babelrc": false,
      "presets": [
        "features"
      ],
      "plugins": [
        "add-module-exports",
        "transform-exponentiation-operator",
        "transform-export-extensions",
        "transform-function-bind",
        "transform-object-rest-spread"
      ],
      "sourceMaps": true
    }
  },
  "babel": {
    "presets": [
      "features"
    ],
    "plugins": [
      "add-module-exports",
      "transform-exponentiation-operator",
      "transform-export-extensions",
      "transform-function-bind",
      "transform-object-rest-spread"
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire"
        ],
        "sourceMaps": true
      }
    }
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
