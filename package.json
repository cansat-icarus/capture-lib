{
  "name": "capture-lib",
  "version": "0.3.0",
  "private": true,
  "main": "dist/index.js",
  "jsnext:main": "src/index.js",
  "module": "src/index.js",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "clean": "rimraf dist/ && mkdirp dist/",
    "lint": "xo",
    "build": "babel src --out-dir dist",
    "build:watch": "npm run build -- --watch",
    "docs": "esdoc -c esdoc.json",
    "test": "npm run lint && npm run coverage",
    "test:watch": "nodemon --watch src --watch test xo & BABEL_ENV=test ava --watch",
    "coverage": "BABEL_ENV=test nyc ava"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "backoff": "^2.5.0",
    "bunyan": "^1.8.5",
    "crc": "^3.4.0",
    "object-path": "^0.11.1",
    "pouchdb": "^6.1.2",
    "serialport": "^4.0.1",
    "socket.io-client": "^1.7.3",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "babel-cli": "^6.23.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-rewire": "^1.0.0-rc-5",
    "babel-plugin-syntax-export-extensions": "^6.13.0",
    "babel-plugin-syntax-function-bind": "^6.13.0",
    "babel-plugin-transform-exponentiation-operator": "^6.22.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "babel-plugin-transform-function-bind": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.1.8",
    "babel-register": "^6.23.0",
    "esdoc": "^0.5.2",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-json": "^1.2.0",
    "jsverify": "^0.7.4",
    "memdown": "^1.2.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.10.2",
    "nyc": "^10.1.2",
    "rimraf": "^2.6.0",
    "sinon": "^1.17.7",
    "xo": "^0.17.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": {
      "babelrc": false,
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            },
            "modules": "commonjs"
          }
        ]
      ],
      "plugins": [
        "add-module-exports",
        "transform-exponentiation-operator",
        "transform-export-extensions",
        "transform-function-bind",
        "transform-object-rest-spread"
      ],
      "sourceMaps": true
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "electron": "1.4",
            "node": 4
          },
          "modules": "commonjs"
        }
      ]
    ],
    "plugins": [
      "add-module-exports",
      "transform-export-extensions",
      "transform-function-bind",
      "transform-object-rest-spread",
      "transform-runtime",
      "syntax-function-bind",
      "syntax-export-extensions"
    ],
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              },
              "modules": "commonjs"
            }
          ]
        ],
        "plugins": [
          "rewire"
        ],
        "sourceMaps": true
      }
    }
  },
  "xo": {
    "parser": "babel-eslint",
    "esnext": true,
    "semicolon": false,
    "extensions": [
      "json"
    ],
    "plugins": [
      "ava",
      "json",
      "babel"
    ],
    "ignores": [
      "docs/**"
    ],
    "rules": {
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "DS18B20",
            "MPX4115A"
          ]
        }
      ],
      "import/extensions": [
        "error",
        "always",
        {
          "js": "never"
        }
      ],
      "max-params": 0
    },
    "overrides": [
      {
        "files": "{package,bower}.json",
        "space": 2
      },
      {
        "files": "test/**/*",
        "rules": {
          "import/named": [
            "off"
          ]
        }
      }
    ]
  }
}
