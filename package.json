{
  "name": "capture-lib",
  "version": "0.3.0",
  "private": true,
  "main": "dist/index.js",
  "jsnext:main": "src/index.js",
  "module": "src/index.js",
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "clean": "rimraf dist/ && mkdirp dist/",
    "lint": "standard",
    "build": "babel src --out-dir dist",
    "build:watch": "npm run build -- --watch",
    "docs": "esdoc -c esdoc.json",
    "test": "npm run lint && npm run coverage",
    "test:watch": "nodemon --watch src --watch test node_modules/.bin/standard & BABEL_ENV=test ava --watch",
    "coverage": "BABEL_ENV=test nyc ava"
  },
  "dependencies": {
    "babel-runtime": "^6.11.6",
    "bunyan": "^1.8.1",
    "crc": "^3.4.0",
    "object-path": "^0.11.1",
    "pouchdb": "^5.4.5",
    "serialport": "^4.0.1",
    "socket.io-client": "^1.4.8",
    "uuid": "^2.0.2"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-add-module-exports": "^0.2.0",
    "babel-plugin-rewire": "^1.0.0-rc-5",
    "babel-plugin-transform-exponentiation-operator": "^6.8.0",
    "babel-plugin-transform-export-extensions": "^6.8.0",
    "babel-plugin-transform-function-bind": "^6.8.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.12.0",
    "babel-preset-features": "^2.1.3",
    "babel-register": "^6.11.6",
    "esdoc": "^0.4.7",
    "esdoc-es7-plugin": "^0.0.3",
    "esdoc-plugin-enhanced-navigation": "^0.1.1",
    "memdown": "^1.2.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.10.2",
    "nyc": "^8.1.0",
    "rimraf": "^2.5.4",
    "standard": "^8.0.0"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": {
      "babelrc": false,
      "presets": [
        "features"
      ],
      "plugins": [
        "add-module-exports",
        "transform-exponentiation-operator",
        "transform-export-extensions",
        "transform-function-bind",
        "transform-object-rest-spread"
      ],
      "sourceMaps": true
    }
  },
  "babel": {
    "presets": [
      "features"
    ],
    "plugins": [
      "add-module-exports",
      "transform-exponentiation-operator",
      "transform-export-extensions",
      "transform-function-bind",
      "transform-object-rest-spread",
      "transform-runtime"
    ],
    "env": {
      "test": {
        "plugins": [
          "rewire"
        ],
        "sourceMaps": true
      }
    }
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "dist/"
    ]
  }
}
